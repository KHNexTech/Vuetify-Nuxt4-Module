{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    "group:allNonMajor"
  ],
  "schedule": ["before 8am on monday"],
  "rangeStrategy": "bump",
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "stabilityDays": 3
    },
    {
      "matchPackagePatterns": ["^nuxt$", "^@nuxt/", "^vuetify$"],
      "groupName": "core dependencies (nuxt/vuetify)"
    }
  ]
}
